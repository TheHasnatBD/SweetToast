<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"

    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SweetToast "
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"/>
        <TextView
            android:layout_marginTop="31dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" demo"
            android:gravity="center_horizontal"
            android:textColor="@color/colorRed"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="now toasting is more easier"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            >

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="defaultShort"
                android:text="Default Short"
                android:background="@color/colorDeepGray"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="defaultLong"
                android:text="Default Long"
                android:background="@color/colorDeepGray"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="info"
                android:text="Info Toast"
                android:background="@color/colorInfo"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="success"
                android:text="Success Toast"
                android:background="@color/colorSuccess"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="error"
                android:text="Error Toast"
                android:background="@color/colorError"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="warning"
                android:text="Warning Toast"
                android:background="@color/colorWarning"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="custom1"
                android:text="Custom Toast-1"
                android:textAllCaps="false"
                android:background="@color/colorBlack"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="custom2"
                android:text="Custom Toast-2"
                android:textAllCaps="false"
                android:background="@color/colorBlack"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="custom3"
                android:text="Custom Toast-3"
                android:textAllCaps="false"
                android:background="@color/colorBlack"
                android:textColor="@android:color/white"/>


            <TextView
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="www.hasnat.xyz"
                android:textColor="@color/colorLightGray"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>